# move workspace to different output (monitor)
set $workspace_move_keymap (h) left, (j) down, (k) up, (l) right
mode "$workspace_move_keymap" {
    bindsym h move workspace to output left, mode "default"
    bindsym j move workspace to output down, mode "default"
    bindsym k move workspace to output up, mode "default"
    bindsym l move workspace to output right, mode "default"

    # back to normal
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym Control+bracketleft mode "default"
}
bindsym $mod+m mode "$workspace_move_keymap"

# run monitor config script (temporary fix until hotplug works)
bindsym $mod+Shift+m exec --no-startup-id monitorctl

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

